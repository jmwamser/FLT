{% extends 'UCrmCoreBundle::layouts/main.html.twig' %}

{% block leftside -%}
    {% include 'UCrmCoreBundle::Client/left-nav.html.twig' %}
{% endblock %}

{% block body -%}
	<div class="page-header">
    	<h1>Add Person</h1>
    </div>

    <form action="{{ path('people_create') }}" method="post" {{ form_enctype(form) }} role="form">
    	<div class="row">
    		<div class="col-md-8">
    			<fieldset class="row">
    				<div class="col-md-6">
        				{{ form_row(form.firstName) }}
        			</div>
        			<div class="col-md-6">
        				{{ form_row(form.lastName) }}
        			</div>
        		</fieldset>
        		<fieldset class="row">
        			<legend>Address</legend>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.streetNumber) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.streetName) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.neighborhood) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.city) }}
                            </div>
                            <div class="col-md-3">
                                {{ form_row(form.zip) }}
                            </div>
                        </div>
                    </div>
        		</fieldset>
                <fieldset class="row">
                    {{ form_row(form.description) }}
                </fieldset>
        	</div>
        	<div class="col-md-4">
        		<div class="well well-sm">
        			{{ form_rest(form) }}
        		</div>
        	</div>
    	</div>
    	<div class="row">
	        <p>
	            <button type="submit" class="btn btn-primary">Create</button>
	        </p>
	    </div>
    </form>
{% endblock %}
