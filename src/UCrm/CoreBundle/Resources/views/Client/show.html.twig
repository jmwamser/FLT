{% extends 'UCrmCoreBundle::layouts/main.html.twig' %}

{% block leftside -%}
    {% include 'UCrmCoreBundle::Client/left-nav.html.twig' %}
{% endblock %}

{% block body -%}
    <div class="top-btns">
        <a href="{{ path('people') }}" class="btn btn-default">
            Back to the list
        </a>
        <a href="{{ path('people_edit', { 'id': entity.id }) }}" class="btn btn-primary">
            Edit
        </a>
        <form action="{{ path('people_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>

    <div class="page-header">
        <h1>Person</h1>
    </div>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ entity.userId }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Streetnumber</th>
                <td>{{ entity.streetNumber }}</td>
            </tr>
            <tr>
                <th>Streetname</th>
                <td>{{ entity.streetName }}</td>
            </tr>
            <tr>
                <th>Neighborhood</th>
                <td>{{ entity.neighborhood }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Zip</th>
                <td>{{ entity.zip }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
