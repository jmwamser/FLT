{% extends 'UCrmCoreBundle::layouts/main.html.twig' %}


{% block leftside -%}
    {% include 'UCrmCoreBundle::Status/left-nav.html.twig' %}
{% endblock %}

{% block body -%}
    <h1>Setting list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('settings_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.value }}</td>
                <td><a href="{{ path('settings_show', { 'id': entity.id }) }}" class="btn btn-default">show</a>
                    <a href="{{ path('settings_edit', { 'id': entity.id }) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
