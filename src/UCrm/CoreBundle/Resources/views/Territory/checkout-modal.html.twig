<script type="text/javascript">
$(function() {
	var checkoutModal = $('#checkoutModal');
	checkoutModal.modal({
		show: false
	});
	checkoutModal.on('hide.bs.modal', function() {
		$('form', checkoutModal).attr('action', '');
	});
	$('[data-target="#checkoutModal"]').click(function() {
		$('form', checkoutModal).attr('action', $(this).data('checkout-url'));
	});
});
</script>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="checkoutModal">
    <div class="modal-dialog">
    	<form action="" method="post" {{ form_enctype(checkout_form) }}>
	      	<div class="modal-content">
	        	<div class="modal-header">
	          		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	          		<h4 class="modal-title">Checkout Territory</h4>
	        	</div>
	        	<div class="modal-body">
	          		
				    <input type="hidden" name="_method" value="PUT" />
				    {{ form_widget(checkout_form) }}
				    
	        	</div>
	        	<div class="modal-footer">
	          		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	          		<button type="submit" class="btn btn-primary">Save changes</button>
	        	</div>
	      	</div><!-- /.modal-content -->
      	</form>
    </div><!-- /.modal-dialog -->
</div>